{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "src/dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["build", "node_modules"]
}
